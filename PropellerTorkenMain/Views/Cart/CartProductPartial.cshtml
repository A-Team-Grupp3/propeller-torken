@model PropellerTorkenMain.Models.Database.Product
<div class="item">
    <div class="buttons">
        <span class="delete-btn"></span>
    </div>

    <div class="image">

        @if (Model.Name.Contains("Torktumlare"))
        {
            <img src="~/images/svartTorktumlare.png" width="70" height="70" class="inCartTorkImage" /> }

        else
        {

            <img src="~/images/Calleintebrednomore.png" width="70" height="70" class="inCartImage" />
        }
    </div>
    <div class="description" style="font-weight:bold">
        <span>@Model.Name</span>
    </div>
    <div class="quantity" style="font-weight:bold">
        @Html.ActionLink("-", "DecrementQtyForProduct", "Cart", new { productName = Model.Name })
        <img src="plus.svg" alt="" />

        <span>@Model.Qty</span>

        @Html.ActionLink("+", "IncrementQtyForProduct", "Cart", new { productName = Model.Name })
        <img src="minus.svg" alt="" />
    </div>
    <div class="total-price">
        @Model.Price SEK
    </div>
    <div class="total-price" style="font-weight:bold">
        <div class="d-flex justify-content-center">
            <a href="@Url.Action("DeleteProduct", "Cart", new { productName = Model.Name })" class="btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash align-text-top" viewBox="0 0 15 15">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                </svg>
            </a>
        </div>
    </div>
</div>